<div class="container">
  <div class="panel panel-info">
    <div class="panel-body panel-bg">
      <div class="row">
        <div class="col-md-5">
          <div class="panel panel-default">
            <div class="panel-heading card-header">
              <h2>Forgot your password?</h2>
            </div>
            <div class="panel-body">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="field">
                  <!--<%= f.label :email %><br />-->
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter E-mail", class: "form-control input-md" %>
                </div>

                <div class="actions">
                  <%= f.submit "Send me reset password instructions", class: "btn btn-info btn-sm pull-right" %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

